<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="primary_activity_button_style_landscape">
        <item name="android:layout_width">@dimen/primary_activity_button_size_landscape</item>
        <item name="android:layout_height">@dimen/primary_activity_button_size_landscape</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="primary_activity_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
